<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/concern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="圆角"
        android:onClick="yuan"
       />
    <Button
        android:id="@+id/circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/concern"
        android:layout_marginLeft="20dp"
        android:text="圆形"
        android:onClick="circle"
        />
    <Button
        android:id="@+id/bl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/circle"
        android:layout_marginLeft="20dp"
        android:text="比例1.2"
        />
    <Button
        android:id="@+id/jian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/bl"
        android:layout_marginLeft="20dp"
        android:text="渐进式"
        android:onClick="jianjin"
        />
    <Button
        android:id="@+id/zp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/concern"
        android:layout_marginTop="20dp"
        android:text="磁盘缓存"
        />
    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/zp"
        app:layout_constraintTop_toBottomOf="@+id/circle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="加载动图"
        />
    <Button
        android:id="@+id/addjian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/add"
        app:layout_constraintTop_toBottomOf="@+id/bl"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="加载监听"
        />
    <Button
        android:id="@+id/pz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/addjian"
        app:layout_constraintTop_toBottomOf="@+id/jian"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="配置OKHTTP"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img"
        android:layout_width="385dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/zp"
        app:roundAsCircle="true"
        app:roundedCornerRadius="10dp"
        android:visibility="gone"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img2"
        android:layout_width="385dp"
        android:layout_height="300dp"
        app:roundAsCircle="true"
        android:visibility="gone"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img3"
        android:layout_width="385dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/zp"
        app:roundAsCircle="false"
        app:roundedCornerRadius="10dp"
        android:visibility="gone"
        />
</android.support.constraint.ConstraintLayout>